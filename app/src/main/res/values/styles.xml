<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0B0B0B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CalcButtonDarkPink" parent="CalcButtonBase">
        <item name="android:backgroundTint">#F22B6F</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalcButtonPink" parent="CalcButtonBase">
        <item name="android:backgroundTint">#FA6B9B</item>
    </style>

    <style name="CalcButtonLightPink" parent="CalcButtonBase">
        <item name="android:backgroundTint">#F4C1D3</item>
    </style>

</resources>